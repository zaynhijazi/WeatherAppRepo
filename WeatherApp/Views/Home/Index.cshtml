@model WeatherApp.Models.Home.HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-lg-4 col-md-3">
    </div>
    <div class="col-lg-4 col-md-6">
        <a class="account-header" href=@Url.Action("Index", "Home")>
            <img src="/weather-app-phone-pic.jpeg" width="100" height="100" />
        </a>

        <div class="box-light mb-5">
            <form asp-controller="Home" asp-action="Index">
                <div>
                    <div class="account-title">
                        <h4>Welcome to the Weather App</h4>
                        <p>This gets the current weather related to every American Zip Code</p>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode" class="form-label"></label>
                    <input asp-for="ZipCode" type="text" class="form-control">
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group account-footer">
                    <input type="submit" value="Get Weather" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    <div class="col-lg-4 col-md-3">

    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}